{
    "extends": "../../tsconfig.json",
    "include": [
        "src/"
    ],
    "paths": {
        "*": ["types/*.d.ts"]
    },
    "exclude": [
        "node_modules/"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./cjs",
        "lib": ["ESNext", "dom"],
        "module": "commonjs",
        "skipLibCheck": true,
        "typeRoots": [
            "src/@types"
        ]
    }
}
